<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Popover contentWidth="20rem" placement="Auto">
        <customHeader>
            <Toolbar style="Clear">
                <Title text="{i18n>ttlRelocationTo} {resume>Country}"/>                
                <ToolbarSpacer/>
                <Button tooltip="{i18n>btnClose}" press="onPressCloseRelocationPopover"
                    icon="{i18n>iClose}"/>
            </Toolbar>
        </customHeader>
        <VBox class="sapUiTinyMargin">
            <Text text="{resume>Description}"/>
            <FormattedText class="sapUiTinyMarginTop" htmlText="{i18n>tForMoreInfo}
                {parts: ['resume>Link', 'i18n>tOfficialSite'], formatter: '.formatter.textLink'}"/>
        </VBox>
	</Popover>
</core:FragmentDefinition>